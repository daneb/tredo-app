<!-- inside app/views/welcome/index.html.erb -->
<div class="container-fluid">
  <div class="row justify-content-center justify-content-equally mt-5">
    <% todo_lists.each do |list| %>
    <div class="col p-5">
        <div class="card" style="background-color: #E4EBEF;">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 justify-content-left">
                <h5 class="card-title"><%= list[1] %></h5>
              </div>
              <div class="col-md-6 text-right">
                <% if (list[1] == "To Do") %>
                <%= link_to '✚ Add', todo_new_path, :class => "btn btn-primary btn-sm justify-content-end" %>
                <% else %>
                <%= link_to '✚ Add', '', :class => "btn btn-primary btn-sm justify-content-end" %>
                <% end %>
              </div>
            </div>
            <% unless list[0].nil? || list[0].empty? %>
                <% todos_by_list(list[0]).each do |action| %>
                <div class="row pb-2">
                <input class="form-control" style="background-color: white" readonly type="text" placeholder="<%= action[1] %>">
                </div>
                <% end %>
             <% end %>
           </div>
        </div>
    </div>
    <% end %>
   </div>
</div>
